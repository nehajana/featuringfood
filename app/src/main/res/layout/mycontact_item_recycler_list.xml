<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/RR_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            />


        <TextView
            android:layout_below="@+id/txt_name"
            android:id="@+id/txt_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Id :"
            android:textSize="16sp"
            android:textColor="@color/Black"/>


        <TextView
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_order_id"
            android:layout_below="@+id/txt_name"
            android:id="@+id/txt_order_id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/Black"/>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txt_order_id_number"
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/Red"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_reorder"
            android:layout_marginTop="12sp"
            android:background="@color/Red"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Reorder"
            />

        <View
            android:visibility="gone"
            android:layout_below="@+id/btn_reorder"
            android:background="#E1E6EA"
            android:layout_marginTop="10dp"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </RelativeLayout>

</RelativeLayout>


