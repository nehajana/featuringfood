<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/RR_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       >

        <TextView
            android:id="@+id/txt_quatity"
            android:layout_margin="5dp"
            android:layout_below="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/txt_ordername"
            android:layout_toRightOf="@+id/txt_quatity"
            android:layout_margin="5dp"
            android:layout_below="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fresh Meat"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_toLeftOf="@+id/RR_remove_item"
            android:id="@+id/txt_price"
            android:layout_margin="5dp"
            android:layout_below="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.00"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/RR_remove_item"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <ImageView
                android:src="@drawable/remove_item"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/RR_order"
        android:id="@+id/view"
        android:background="@color/Gray_one"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        ></View>


</RelativeLayout>