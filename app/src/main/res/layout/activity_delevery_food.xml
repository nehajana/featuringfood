<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/RR_Details"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/RR_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/RR_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:id="@+id/RR_lay"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:background="@color/Black"
                        android:id="@+id/RR_video_view"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                        <ImageView
                            android:src="@drawable/no_image_icon"
                            android:id="@+id/thumbnail"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="250dp" />

                        <ImageView
                            android:id="@+id/play"
                            android:layout_marginBottom="5dp"
                            android:layout_width="50dp"
                            android:layout_centerInParent="true"
                            android:layout_height="50dp"
                            android:src="@drawable/youtube_icon"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@color/white"
                        android:id="@+id/RR_layoutFirst"
                        android:layout_below="@+id/RR_video_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/RR_sizzing"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">


                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"
                                android:layout_width="20dp"
                                android:tint="@color/red"
                                android:visibility="invisible"
                                android:layout_height="20dp"
                                android:src="@drawable/arrow_left_icon"
                                />

                            <TextView
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TEXAS SIZZLING STEAKS"
                                android:layout_margin="5dp"
                                />

                            <ImageView
                                android:visibility="invisible"
                                android:layout_width="24dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/arrow_icon"
                                android:tint="@color/red" />

                        </RelativeLayout>

                        <TextView
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:id="@+id/txt_price_one"
                            android:layout_below="@+id/RR_sizzing"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This is the best steak you will every try.it is grilled by the best sizzling steak griller of all time.you will absolutely"
                            android:layout_margin="5dp"
                            />

                        <RelativeLayout
                            android:layout_margin="5dp"
                            android:layout_below="@+id/txt_price_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:id="@+id/img_free_delivery"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/send_icon"
                                />

                            <RelativeLayout
                                android:id="@+id/RR_free"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:layout_toRightOf="@+id/img_free_delivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txt_free_dervery"
                                    android:textSize="17dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FREE DLEVERY"
                                    android:textStyle="bold"
                                    android:textColor="@color/red"
                                    />

                                <TextView
                                    android:id="@+id/txt_time"
                                    android:layout_below="@+id/txt_free_dervery"
                                    android:textSize="17dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Get it in - 40 minutes"
                                    android:textStyle="bold"
                                    android:textColor="@color/red"
                                    />

                            </RelativeLayout>


                            <View
                                android:id="@+id/view_review"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/RR_free"
                                android:background="@color/Gray_one"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                ></View>

                            <RelativeLayout
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/view_review"
                                android:layout_margin="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_margin="5dp"
                                    android:id="@+id/img_free_dervery_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:src="@drawable/star_icon"
                                    />

                                <!--
                                                        <TextView
                                                            android:gravity="center"
                                                            android:id="@+id/txt_free_dervery_one"
                                                            android:textSize="17dp"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="FREE DLEVERY"
                                                            android:textStyle="bold"
                                                            android:textColor="@color/red"
                                                            />-->

                                <TextView
                                    android:id="@+id/txt_review"
                                    android:gravity="center"
                                    android:layout_below="@+id/img_free_dervery_one"
                                    android:textSize="17dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0 Review"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    />

                            </RelativeLayout>


                        </RelativeLayout>

                    </RelativeLayout>



                    <View
                        android:layout_below="@+id/RR_layoutFirst"
                        android:id="@+id/view_ad"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        ></View>


                    <RelativeLayout
                        android:padding="10dp"
                        android:background="@color/white"
                        android:layout_below="@+id/view_ad"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_back"
                            android:tint="@color/red"
                            android:layout_width="40dp"
                            android:src="@drawable/back_icon"
                            android:layout_height="25dp" />

                        <RelativeLayout
                            android:layout_below="@+id/img_back"
                            android:id="@+id/RR_ingredient"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ingredients"
                                android:layout_margin="5dp"
                                />

                            <TextView
                                android:layout_alignParentRight="true"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Optional"
                                android:layout_margin="5dp"
                                />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/LL_order"
                            android:layout_below="@+id/RR_ingredient"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:visibility="visible"
                                android:layout_height="wrap_content"
                                android:id="@+id/recycler_ingredients"
                                >
                            </android.support.v7.widget.RecyclerView>

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:visibility="gone"
                                    android:id="@+id/progressbar"
                                    android:layout_width="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtNoRecord"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/red"
                                    android:text="No Record Found."
                                    />

                            </RelativeLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>



    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/RR_one1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/roundbttn"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imgOne"
            android:layout_centerVertical="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:tint="@color/white"
            android:layout_marginLeft="35dp"
            android:src="@drawable/send_icon"
            />

        <TextView
            android:id="@+id/txt_price"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/imgOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook it   &amp;   Bring it to Me $14.95"
            android:layout_margin="5dp"
            />

    </RelativeLayout>

</RelativeLayout>