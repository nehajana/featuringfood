<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/dialog_bg"
    >
    <LinearLayout
        android:id="@+id/logout_tittle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Tip"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/logout_subtxt"
        android:layout_below="@+id/logout_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:text="Are you sure you want to delete this item ?"/>

    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/logout_subtxt"
        android:layout_width="match_parent"
        android:background="@drawable/border_black"
        android:paddingLeft="15dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/txt_doller"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:text="$"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_payment"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/txt_doller"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <Button
            android:id="@+id/dialog_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/ripple"
            android:text="No"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/ripple"
            android:text="Yes"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>