<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddAdress.AddAdressActivity">

    <RelativeLayout
        android:id="@+id/RR_toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/RR_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:tint="@color/red"
                android:src="@drawable/arrow_left_icon"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD ADDRESS"
            android:visibility="visible"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_title_delivery"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivering To"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:layout_below="@+id/txt_title_delivery"
            android:id="@+id/txt_title_address"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/RR_profile"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_user"
                android:layout_width="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_height="25dp"
                android:src="@drawable/default_icon"
                />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/RR_toolbar"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_login"
                android:text="Address"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="16dp"
                android:textColor="@color/Red"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_address"
            android:layout_below="@+id/txt_floor"
            android:layout_marginTop="5dp"
            android:hint="Address"
            android:background="@drawable/whiteeditround"
            android:paddingLeft="10dp"
            android:text=""
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="15dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Gray_one"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_below="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment, building, floor?"
                android:textSize="16dp"
                android:textColor="@color/Black"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="16dp"
                android:textColor="@color/Red"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_apartment"
            android:layout_below="@+id/txt_floor"
            android:layout_marginTop="5dp"
            android:hint="Apartment, building, floor."
            android:background="@drawable/whiteeditround"
            android:paddingLeft="10dp"
            android:text=""
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="15dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Gray_one"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_below="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="16dp"
                android:textColor="@color/Black"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="16dp"
                android:textColor="@color/Red"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_state"
            android:layout_below="@+id/txt_floor"
            android:layout_marginTop="5dp"
            android:hint="State"
            android:background="@drawable/whiteeditround"
            android:paddingLeft="10dp"
            android:text=""
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="15dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/Gray_one"
            />


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/LL_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_below="@+id/txt_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="16dp"
                        android:textColor="@color/Black"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="16dp"
                        android:textColor="@color/Red"
                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_city"
                    android:layout_marginTop="5dp"
                    android:hint="City"
                    android:background="@drawable/whiteeditround"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="15dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/Gray_one"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_below="@+id/txt_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zip"
                        android:textSize="16dp"
                        android:textColor="@color/Black"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="16dp"
                        android:textColor="@color/Red"
                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_zipcode"
                    android:layout_marginTop="5dp"
                    android:hint="Zip"
                    android:background="@drawable/whiteeditround"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="15dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/Gray_one"
                    />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:id="@+id/addAdress_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundbttn"
        android:text="Save Address"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</RelativeLayout>